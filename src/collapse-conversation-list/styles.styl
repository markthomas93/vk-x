.im-page:not(.im-page_classic)
  .im-page--dialogs
    width: 76px !important

    #im_dialogs_search
      display none

    .im-dialog-select
      display none

    .im-page--stars
      margin-left 12px

    #im_dialogs
      width 100% !important

    .nim-dialog--cw > :not(.nim-dialog--unread)
      display none !important

    .nim-dialog--unread
      margin-top 0 !important

    .im-page--dialogs-footer
      height 63px !important

      .im-page--dialogs-settings
        float none !important
        margin 25px auto 0 auto !important

    .im-page--dialogs-filter-wrap
      display none !important

  .im-page--history
    margin-left 76px !important

    .im-page--chat-body-abs
      width: 100% !important

    .im-chat-input .im-chat-input--textarea
      width calc(100% - 116px)

    .im-page--top-date-bar-wrap
      width 100%
